.about
  text-align center
  font-size 24px
  font-weight 200
  line-height 33px
  margin 20px 0 50px

hr
  border-color $borderColor
  margin-bottom 60px
  
.open-source
  text-align center
  color #444
  
  p
    margin-bottom 10px

.about-container
  width 84%
  margin 0 auto 40px
  display flex
  border 1px solid #c3c3c3
  border-radius 3px
  
  > div:first-child
    border-right 1px solid #c3c3c3

  .creator, .sponsor
    padding 30px 0
    flex .5
    text-align center

    span, a
      font-size 15px
      font-weight 200
  
  img
    display inline-block
    margin-bottom 15px

  .creator img
    border-radius 50%
