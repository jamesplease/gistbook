.gistblock-editor
  margin 0 40px

.gistblock-editor ul
  border-bottom 1px solid #ccc
  margin-bottom 15px

  li
    display inline-block

  a
    position relative
    bottom -1px
    display block
    padding 8px 16px 6px
    text-decoration none
    color #999

    &.active-tab
      color #000
      padding 8px 15px 6px
      border 1px solid #ccc
      border-bottom 0
      border-radius 4px 4px 0 0
      background #fff

.gistblock-editor .gistblock-content
  margin-bottom 15px

.gistblock-editor button
  width: 80px

.gistblock-editor .button-container
  text-align right

.gistblock-content > .gistblock
  margin-top 5px

.gistblock-content > .gistblock-javascript
  margin-top 10px

.gistblock-editor .gistblock
  padding-bottom 10px
  border-bottom 1px solid #ddd
