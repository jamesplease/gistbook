.ace-editor
  
  .ace-wrapper:after
      position absolute
      top 1px
      right 1px
      display block
      content 'Code'
      color #666
      font-size 13px
      border 1px solid #ddd
      border-top 0
      border-right 0
      border-radius 0 0 0 7px
      padding 3px 5px 2px
      background #fff

  &.ace-editor-javascript .ace-wrapper:after
    content 'Javascript'
  &.ace-editor-html .ace-wrapper:after
    content 'HTML'
  &.ace-editor-css .ace-wrapper:after
    content 'CSS'
    

.ace-wrapper
  border 1px solid #ddd
  border-radius 3px
  padding 8px 5px
  position relative
