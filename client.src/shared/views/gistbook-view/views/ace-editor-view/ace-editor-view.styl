.ace-editor
  
  .ace-wrapper:after
      position absolute
      top 0
      right 0
      display block
      content 'Code'
      color #bbb
      font-weight 600
      letter-spacing 1px
      font-size 13px
      border 1px solid #d3d3d3
      border-top 0
      border-right 0
      border-radius 0 0 0 3px
      padding 4px 13px 3px
      background #fff

  &.ace-editor-javascript .ace-wrapper:after
    content 'Javascript'
  &.ace-editor-html .ace-wrapper:after
    content 'HTML'
  &.ace-editor-css .ace-wrapper:after
    content 'CSS'
    
  &.read-only .ace_content
    cursor default
    

.ace-wrapper
  border 1px solid #d3d3d3
  border-radius 3px
  padding 8px 5px
  position relative
  background #f5f5f5
  box-shadow inset 0 1px 3px rgba(0,0,0,.1)
  
  .ace-tomorrow
    background inherit
